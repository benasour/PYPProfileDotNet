@model PYPProfileDotNet.Models.UserAccount

<h2>Account Details</h2>
<a href="#edit" id="edit">Edit</a>

@using (Html.BeginForm("AccountDetails", "Account", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary();
    <fieldset>
        <legend>Change Account Details Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.Name)
            </li>

            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>

            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @readonly = true, type = "email" })
                @Html.ValidationMessageFor(m => m.Email)
            </li>  
        </ol>
    </fieldset>
    <input type="submit" value="Save" /> <input type="button" class="reset" value="reset" />
}